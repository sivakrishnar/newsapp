<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @moviereview.object %>
    <h1>Edit <%= @moviereview.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @moviereview.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @moviereview.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="moviereview[id]" value="<%= @moviereview.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="moviereview[title]" value="<%= @moviereview.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Author: </td>
              <td class="itemValue"><input type="text" name="moviereview[author]" value="<%= @moviereview.author %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Rating: </td>
              <td class="itemValue"><input type="text" name="moviereview[rating]" value="<%= @moviereview.rating %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Content: </td>
              <td class="itemValue"><input type="text" name="moviereview[content]" value="<%= @moviereview.content %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Created at: </td>
              <td class="itemValue"><input type="text" name="moviereview[created_at]" value="<%= @moviereview.created_at %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image url: </td>
              <td class="itemValue"><input type="text" name="moviereview[image_url]" value="<%= @moviereview.image_url %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
