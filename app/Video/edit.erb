<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @video.title %></h1>
    <a href="<%= url_for :action => :show, :id => @video.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @video.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @video.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="video[title]" class="fieldLabel">Title</label>
            <input type="text" id="video[title]" name="video[title]" value="<%= @video.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
