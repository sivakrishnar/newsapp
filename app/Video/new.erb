<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @video.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @video.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="video[title]" class="fieldLabel">Title</label>
            <input type="text" id="video[title]" name="video[title]" <%= placeholder("Title") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
