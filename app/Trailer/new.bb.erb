<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Trailer</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @trailer.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="trailer[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="trailer[title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Url: </td>
                <td class="itemValue"><input type="text" name="trailer[url]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Image url: </td>
                <td class="itemValue"><input type="text" name="trailer[image_url]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Created at: </td>
                <td class="itemValue"><input type="text" name="trailer[created_at]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
