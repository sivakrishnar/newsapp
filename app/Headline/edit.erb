<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @headline.id %></h1>
    <a href="<%= url_for :action => :show, :id => @headline.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
    <a href="<%= url_for :action => :delete, :id => @headline.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">Delete</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @headline.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="headline[id]" class="fieldLabel">Id</label>
            <input type="text" id="headline[id]" name="headline[id]" value="<%= @headline.id %>" <%= placeholder( "Id" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="headline[title]" class="fieldLabel">Title</label>
            <input type="text" id="headline[title]" name="headline[title]" value="<%= @headline.title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="headline[created-at]" class="fieldLabel">Created-at</label>
            <input type="text" id="headline[created-at]" name="headline[created-at]" value="<%= @headline.created-at %>" <%= placeholder( "Created-at" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
