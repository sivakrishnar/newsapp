<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @headline.object %>
    <h1>Edit <%= @headline.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @headline.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @headline.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="headline[id]" value="<%= @headline.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="headline[title]" value="<%= @headline.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Created-at: </td>
              <td class="itemValue"><input type="text" name="headline[created-at]" value="<%= @headline.created-at %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
