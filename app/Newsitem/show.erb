<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @newsitem.id %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">Back</a>
    <a href="<%= url_for :action => :edit, :id => @newsitem.object %>" class="ui-btn-right" data-icon="star">Edit</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Id</div>
            <div class="itemValue"><%= @newsitem.id %></div>
          </li>
      
          <li>
            <div class="itemLabel">Title</div>
            <div class="itemValue"><%= @newsitem.title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Author</div>
            <div class="itemValue"><%= @newsitem.author %></div>
          </li>
      
          <li>
            <div class="itemLabel">ImageUrl</div>
            <div class="itemValue"><%= @newsitem.image_url %></div>
          </li>
      
          <li>
            <div class="itemLabel">Content</div>
            <div class="itemValue"><%= @newsitem.content %></div>
          </li>
      
          <li>
            <div class="itemLabel">Created-at</div>
            <div class="itemValue"><%= @newsitem.created-at %></div>
          </li>
      
    </ul>
  </div>

</div>
