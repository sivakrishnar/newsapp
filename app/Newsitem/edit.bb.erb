<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @newsitem.object %>
    <h1>Edit <%= @newsitem.id%></h1>
    <%= link_to "Delete", :action => :delete, :id => @newsitem.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @newsitem.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Id: </td>
              <td class="itemValue"><input type="text" name="newsitem[id]" value="<%= @newsitem.id %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="newsitem[title]" value="<%= @newsitem.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Author: </td>
              <td class="itemValue"><input type="text" name="newsitem[author]" value="<%= @newsitem.author %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image url: </td>
              <td class="itemValue"><input type="text" name="newsitem[image_url]" value="<%= @newsitem.image_url %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Content: </td>
              <td class="itemValue"><input type="text" name="newsitem[content]" value="<%= @newsitem.content %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Created-at: </td>
              <td class="itemValue"><input type="text" name="newsitem[created-at]" value="<%= @newsitem.created-at %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
