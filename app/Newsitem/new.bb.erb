<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New Newsitem</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @newsitem.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Id: </td>
                <td class="itemValue"><input type="text" name="newsitem[id]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="newsitem[title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Author: </td>
                <td class="itemValue"><input type="text" name="newsitem[author]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Image url: </td>
                <td class="itemValue"><input type="text" name="newsitem[image_url]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Content: </td>
                <td class="itemValue"><input type="text" name="newsitem[content]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Created-at: </td>
                <td class="itemValue"><input type="text" name="newsitem[created-at]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
