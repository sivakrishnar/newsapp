<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @news.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">Back</a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Title</div>
            <div class="itemValue"><%= @news.title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Content</div>
            <div class="itemValue"><%= @news.link %></div>
          </li>
      
    </ul>
  </div>

</div>
