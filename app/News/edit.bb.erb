<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @news.object %>
    <h1>Edit <%= @news.link%></h1>
    <%= link_to "Delete", :action => :delete, :id => @news.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @news.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Link: </td>
              <td class="itemValue"><input type="text" name="news[link]" value="<%= @news.link %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="news[title]" value="<%= @news.title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="news[date]" value="<%= @news.date %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
