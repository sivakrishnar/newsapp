<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @news.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">Cancel</a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @news.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="news[link]" class="fieldLabel">Link</label>
            <input type="text" id="news[link]" name="news[link]" <%= placeholder("Link") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="news[title]" class="fieldLabel">Title</label>
            <input type="text" id="news[title]" name="news[title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="news[date]" class="fieldLabel">Date</label>
            <input type="text" id="news[date]" name="news[date]" <%= placeholder("Date") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
